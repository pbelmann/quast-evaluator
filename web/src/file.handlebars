<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <h3 class="text-center">Ranking by {{type}}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="list-group">
                {{#each best as |item  index| }}
                    <a href="#" class="list-group-item">
                        <h3 class="list-group-item-heading">{{inc index}}. {{name}}</h3>
                        <p class="list-group-item-text">{{category}}</p>
                    </a>
                {{/each}}
                {{#each others as |item  index| }}
                        <a href="#" class="list-group-item">
                            <h4 class="list-group-item-heading"><i class="fa fa-trophy"
                                                                   aria-hidden="true"></i>  {{name}}</h4>
                            <p class="list-group-item-text">{{category}}</p>
                        </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>